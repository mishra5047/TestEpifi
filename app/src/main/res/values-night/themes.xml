<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestEpifi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryVariant">@color/cyan</item>
        <item name="colorOnPrimary">@color/cyan</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.TestEpifi.TextTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.TestEpifi.TextNoPan" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/cyan</item>
    </style>

    <style name="Theme.TestEpifi.Button" >

        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/cyan</item>
    </style>
</resources>