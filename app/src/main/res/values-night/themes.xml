<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestEpifi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/purple_500</item>

    </style>

    <style name="Theme.TestEpifi.TextTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="Theme.TestEpifi.TextNoPan" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="Theme.TestEpifi.Button">
        <item name="android:background">@color/purple_200</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.TestEpifi.ActivityBackground">
        <item name="android:background">@color/white</item>
    </style>
</resources>